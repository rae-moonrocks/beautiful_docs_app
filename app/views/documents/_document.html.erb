<% frame_id_title = dom_id(document, "document_title_frame") %>
<% frame_id_description = dom_id(document, "document_description_frame") %>
<% contributor_name = document.contributor_name %>

<div class="bg-gray-50 border border-gray-200 rounded-lg shadow-lg p-6 space-y-4">
  <div class="flex items-center justify-between">
    <%= turbo_frame_tag frame_id_title do %>
      <h1 class="text-2xl font-bold text-gray-800">
        <%= document.title %>
      </h1>
    <% end %>

    <%# TODO: edit and destroy buttons %>
    <div class="flex items-center space-x-2">
      <%# <%= link_to "Edit", edit_document_path(document), class: "text-blue-500 hover:underline text-sm" %> 
      <%# <span class="text-gray-400">|</span> %>
      <%# <%= button_to "Destroy", document, method: :delete,  %>
          <%# class: "text-red-500 hover:underline text-sm",  %>
          <%# data: { confirm: "Are you sure you want to delete this document?" } %> 
        <%= link_to "Close", documents_path, data: { turbo_frame: "document_#{document.id}"}, class: "text-gray-500 hover:underline text-sm" %>
    </div>
  </div>

  <p class="text-sm text-gray-500 italic">
    <span>Contributed by:</span>
    <span class="font-medium text-gray-700"><%= contributor_name %></span>
  </p>

  <%= turbo_frame_tag frame_id_description do %>
    <p class="text-gray-600">
      <%= document.description %>
    </p>
  <% end %>

<div class="pt-4">
  <%= link_to "View Original Document", document.url, class: "bg-gradient-to-r from-blue-600 via-indigo-700 to-purple-800 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 hover:shadow-xl transition duration-300 ease-in-out", target: :_blank %>
</div>



</div>
