<%= form_with(model: document) do |form| %>
  <div class="relative">
    <turbo-frame id="error_explanation">
      <% if document.errors.any? %>
        <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>
        <ul>
          <% document.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </turbo-frame>

    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 font-medium" %>
      <%= form.text_field :title, placeholder: "Ruby on Rails Guides", class: "" %>
    </div>
    
    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700 font-medium" %>
      <%= form.text_field :description, placeholder: "Well-structured and filled with practical examples that make concepts easy to grasp", class: "" %>
    </div>
    
    <div class="mb-4">
      <%= form.label :contributor, "Username", class: "block text-gray-700 font-medium" %>
      <%= form.text_field :contributor, placeholder: "myUsername", class: "" %>
    </div>    
    
    <div class="mb-4">
      <%= form.label :contributor_type, 'Username Site', class: "block text-gray-700 font-medium" %>
       <%= form.select :contributor_type, [ 'Github', 'Twitter' ], :prompt => 'Select One' %>
    </div>

    <div class="mb-4">
      <%= form.label :url, class: "block text-gray-700 font-medium" %>
      <%= form.text_field :url, placeholder: "https://guides.rubyonrails.org/", class: "" %>
    </div>

    <div class="mb-4">
      <%= form.submit "Submit", class: "" %>
    </div>
  </div>
<% end %>

